{
  "name": "nuxt-app",
  "type": "module",
  "private": false,
  "version": "0.1.0",
  "engines": {
    "node": ">=20.19.3"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:azure": "npx nuxi build --preset=azure && npx @azure/static-web-apps-cli start .output/public --api-location .output/server",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "APP_ENV=test playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "cosmos:setup:staging": "bash ./scripts/cosmosdb/setup-complete.sh staging",
    "cosmos:setup:production": "bash ./scripts/cosmosdb/setup-complete.sh production",
    "cosmos:status:staging": "bash ./scripts/cosmosdb/manage.sh status staging",
    "cosmos:status:production": "bash ./scripts/cosmosdb/manage.sh status production"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/test-utils": "^3.19.2",
    "eslint": "^9.36.0",
    "nuxt": "^4.1.2",
    "nuxt-auth-utils": "^0.5.25",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.5.2",
    "vite-plugin-vuetify": "^2.1.2",
    "vuetify": "^3.10.2"
  }
}
